@model IEnumerable<IPhoneShop.Models.Order>
@{
    ViewData["Title"] = "My Orders";
    Layout = "_Layout";
}
<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>Your cart is empty. Go to <a href="/Products/Browse">Browse</a> to add items.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>OrderID</th>
                <th>ProductID</th>
                <th>Qty</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.ProductId</td>
                    <td>@order.Quantity</td>
                    <td>@order.Status</td>
                    <td>@order.OrderDate</td>
                    <td>@order.DeliveryAddress</td>
                    <td>
                        @if (order.Status == "Saved")
                        {
                            <form class="inline" asp-action="Edit" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@order.OrderId" />
                                <input type="number" name="qty" value="@order.Quantity" min="1" style="width:80px" />
                                <input type="text" name="address" value="@order.DeliveryAddress" style="width:240px" />
                                <button class="btn" type="submit">Update</button>
                            </form>
                            <a class="btn" asp-action="Delete" asp-route-orderId="@order.OrderId">Delete</a>
                        }
                        else
                        {
                            <a class="btn" asp-action="Details" asp-route-orderId="@order.OrderId">View</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}