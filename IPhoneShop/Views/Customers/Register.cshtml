@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}
<h2>Register</h2>

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()
    <div><label>Customer ID</label><br /><input type="text" name="customerId" maxlength="4" required /></div>
    <div style="margin-top:8px;"><label>First Name</label><br /><input type="text" name="firstName" required /></div>
    <div style="margin-top:8px;"><label>Last Name</label><br /><input type="text" name="lastName" required /></div>
    <div style="margin-top:8px;"><label>Email</label><br /><input type="email" name="email" required /></div>
    <div style="margin-top:8px;"><label>Password</label><br /><input type="password" name="password" required /></div>
    <div style="margin-top:8px;"><label>Phone Number</label><br /><input type="text" name="phoneNumber" required /></div>
    <div style="margin-top:12px;"><button class="btn" type="submit">Create Account</button></div>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:#b91c1c;margin-top:12px;">@ViewBag.Error</p>
}
