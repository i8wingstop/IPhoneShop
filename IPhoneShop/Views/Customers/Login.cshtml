@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 -mt-16">
    <div class="max-w-6xl w-full">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="flex flex-col lg:flex-row">
                <!-- Left Side - Image Only -->
                <div class="lg:w-1/2 bg-cover bg-center"
                     style="background-image: url('/images/IPhone_Login.jpg');">
                </div>

                <!-- Right Side - Login Form -->
                <div class="lg:w-1/2 p-12">
                    <div class="max-w-md mx-auto">
                        <div class="text-center mb-8">
                            <h1 class="text-3xl font-bold text-gray-900 mb-2">Sign In</h1>
                            <p class="text-gray-600">Enter your credentials to access your account</p>
                        </div>

                        <form asp-action="Login" method="post" class="space-y-6">
                            @Html.AntiForgeryToken()

                            <div class="space-y-4">
                                <div class="animate-slide-up" style="animation-delay: 0.1s">
                                    <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
                                    <input type="email"
                                           name="email"
                                           id="email"
                                           required
                                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all duration-200 text-gray-900 placeholder-gray-500"
                                           placeholder="Enter your email address" />
                                </div>

                                <div class="animate-slide-up" style="animation-delay: 0.2s">
                                    <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
                                    <input type="password"
                                           name="password"
                                           id="password"
                                           required
                                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-all duration-200 text-gray-900 placeholder-gray-500"
                                           placeholder="Enter your password" />
                                </div>
                            </div>

                            <div class="space-y-4 animate-slide-up" style="animation-delay: 0.3s">
                                <button type="submit"
                                        class="w-full bg-gradient-to-r from-brand-600 to-brand-700 hover:from-brand-700 hover:to-brand-800 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 shadow-lg hover:shadow-xl">
                                    Sign In
                                </button>

                                <div class="text-center">
                                    <span class="text-gray-600">Don't have an account? </span>
                                    <a href="/Customers/Register"
                                       class="text-brand-600 hover:text-brand-700 font-semibold transition-colors duration-200">
                                        Create Account
                                    </a>
                                </div>
                            </div>
                        </form>

                        @if (ViewBag.Error != null)
                        {
                            <div class="mt-6 p-4 bg-red-50 border border-red-200 rounded-lg animate-slide-up">
                                <div class="flex items-center">
                                    <svg class="w-5 h-5 text-red-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                    <p class="text-red-700 font-medium">@ViewBag.Error</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>