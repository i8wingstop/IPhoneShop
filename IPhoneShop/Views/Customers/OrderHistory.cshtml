@model IEnumerable<IPhoneShop.Models.Order>
@{
    ViewData["Title"] = "Order History";
    Layout = "_Layout";
}
<h2>Order History</h2>

@if (!Model.Any())
{
    <p>No orders yet.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>OrderID</th>
                <th>ProductID</th>
                <th>Qty</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Delivery Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.OrderId</td>
                    <td>@o.ProductId</td>
                    <td>@o.Quantity</td>
                    <td>@o.Status</td>
                    <td>@o.OrderDate</td>
                    <td>@o.DeliveryAddress</td>
                </tr>
            }
        </tbody>
    </table>
}